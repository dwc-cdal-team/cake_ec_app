<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>
              商品名
            </th>
            <th>
              単価(税込)
            </th>
            <th>
              数量
            </th>
            <th>
              小計
            </th>
            <th>
              制作ステータス
            </th>
            <th>

            </th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
          <tr>
            <th>
              <%= order_item.item.name %>
            </th>
            <th>
              <%= order_item.price_with_tax.to_s(:delimited) %>
            </th>
            <th>
              <%= order_item.amount %>
            </th>
            <th>
              <%= (order_item.price_with_tax * order_item.amount).to_s(:delimited) %>
            </th>
            <th>
              <%= order_item.making_status %>
            </th>
            <th>
              更新する
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table">
          <tr>
            <th>
              商品合計
            </th>
            <th>
              <%= @total_price.to_s(:delimited) %>円
            </th>
          </tr>
          <tr>
            <th>
              送料
            </th>
            <th>
              <%= @order.postage.to_s(:delimited) %>円
            </th>
          </tr>
          <tr>
            <th>
              請求金額合計
            </th>
            <th>
              <%= @order.total_payment.to_s(:delimited) %>円
            </th>
          </tr>
      </table>
    </div>
  </div>
</div>
