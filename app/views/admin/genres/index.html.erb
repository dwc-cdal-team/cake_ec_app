<div class="container">
  <div class="row">
    <div class=”col-md-8”>
      <h2>ジャンル一覧・追加</h2>
      <%= render 'layouts/errors', obj: @genre_new %>
      <%= form_with model: @genre_new, url: admin_genres_path, local: true, method: :post do |form| %>
        <%= form.label :name, "ジャンル名" %>
        <%= form.text_field :name %>
        <%= form.submit "新規登録", class: "btn btn-success" %>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>
              ジャンル
            </th>
            <th>

            </th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <th>
              <%= genre.name %>
            </th>
            <th>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success", method: :get %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>