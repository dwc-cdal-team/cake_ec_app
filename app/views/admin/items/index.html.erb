<div class="container py-5">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="row-md-10 pb-3">
        <h2>商品一覧</h2>
        <div class="text-right">
          <%= link_to "商品新規登録", new_admin_item_path, class: "btn btn-primary" %>
        </div>
      </div>

      <div class="row-md-10 pb-3">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price_without_tax.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_stopped == false %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-black-50">販売停止中</td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>

        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
