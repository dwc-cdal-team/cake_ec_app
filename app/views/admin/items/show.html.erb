<div class="container py-5">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="row-md-10 pb-3">
        <h2>商品詳細</h2>
      </div>

      <div class="row pb-3">
        <div class="col-md-3">
          <%= image_tag @item.get_image(200, 150), class: "w-100" %>
        </div>

        <div class="col-md-7">
          <table class="table table-borderless">
            <tr>
              <th>商品名</th>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <th>税込価格<br>(税抜価格)</th>
              <td>
                <%= @item.price_with_tax.to_s(:delimited) %>
                (<%= @item.price_without_tax.to_s(:delimited) %>)円
              </td>
            </tr>
            <tr>
              <th nowrap>販売ステータス</th>
              <% if @item.is_stopped == false %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-black-50">販売停止中</td>
              <% end %>
            </tr>
          </table>

          <div class="text-center">
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success w-50" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>