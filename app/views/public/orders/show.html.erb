<div class="container py-5">
  <div class="row">
    <div class="col-md-11 mx-auto">
      <h2>注文履歴詳細</h2>

      <div class="row">
        <div class="col-8">
          <span class="font-weight-bold">注文情報</span>
          <table class="table table-bordered">
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>
                〒<%= @order.postal_code.insert(3, "-") %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <td>支払方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @order.order_status_i18n %></td>
            </tr>
          </table>
        </div>

        <div class="col-4">
          <span class="font-weight-bold">請求情報</span>
          <table class="table table-bordered">
            <tr>
              <td>商品合計</td>
              <td><%= @total.to_s(:delimited) %></td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <th>ご請求額</th>
              <td><%= @order.total_payment.to_s(:delimited) %></td>
            </tr>
          </table>
        </div>
      </div>


      <div class="row">
        <div class="col-10">
          <span class="font-weight-bold">注文内容</span>
          <table class="table table-bordered">
            <tr>
              <td>商品</td>
              <td>単価 (税込)</td>
              <td>個数</td>
              <td>小計</td>
            </tr>
            <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.price_with_tax.to_s(:delimited) %></td>
              <td><%= order_item.amount %></td>
              <td><%= ( order_item.price_with_tax * order_item.amount ).to_s(:delimited) %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>