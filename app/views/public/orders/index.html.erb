<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>注文履歴一覧</h2>
      
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |oder| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postal_code.insert(3, "-") %><br>
              <%= order.address %>
            </td>
            <td>
              <% order.items.each do |item| %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= order.total_payment.to_s(:delimited) %>円</td>
            <td><%= order.order_status %></td>
            <td><%= link_to "", </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
