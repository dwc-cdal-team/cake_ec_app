<div class="container py-5">
  <div class="row pb-3">
    <h2>新規会員登録</h2>
  </div>

  <div class="row pb-3">
    <div class="col-md-10 mx-auto">
      <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field">
          <label class="w-25">名前</label>
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name, autofocus: true, class: "name w-25 mr-3" %>
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name, autofocus: true, class: "name  w-25 mr-3" %>
        </div>
        <div class="field">
          <label class="w-25">フリガナ</label>
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, class: "name w-25 mr-3" %>
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, class: "name w-25 mr-3" %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: "w-25" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-25" %>
        </div>
        <div class="field">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "w-25" %>
          <%= f.text_field :postal_code, autofocus: true, class: "w-25" %>
        </div>
         <div class="field">
          <%= f.label :address, "住所", class: "w-25" %>
          <%= f.text_field :address, autofocus: true, class: "w-50" %>
        </div>
         <div class="field">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "w-25" %>
          <%= f.text_field :telephone_number, autofocus: true, class: "w-25" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)", class: "w-25" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-25" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "w-25" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-25" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "新規登録", class: "btn btn-success w-50" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row pb-3">
    <h2>既に登録済みの方</h2>
  </div>

  <div class="row pb-3">
    <div class="col-md-10 mx-auto">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>