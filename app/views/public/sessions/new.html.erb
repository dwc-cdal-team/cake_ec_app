<div class="container">
  <div class="row">
    <div class=”col-md-8”>
      <h2>ログイン</h2>
      <strong>会員の方はこちらからログイン</strong>
      
      <%= form_with model: @customer,local: true, url: session_path(resource_name) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン",class: "btn btn-primary" %>
      </div>
      <% end %>
      <strong>会員登録がお済みでない方</strong></br>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
