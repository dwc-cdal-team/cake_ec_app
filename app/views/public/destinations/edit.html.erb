<div class="container py-5">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="row-md-10 pb-3">
        <h2>配送先編集</h2>
      </div>

      <div class="row-md-10 pb-3">
        <%= render 'layouts/errors', obj: @destination %>
        <%= form_with model: @destination, url: destination_path(@destination.id), local: true, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code, class: "w-100" %></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address, class: "w-100" %></td>
          </tr>
          <tr>
            <td><%= f.label :name, "宛名" %></td>
            <td><%= f.text_field :name, class: "w-100" %></td>
            <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>