<div class="row-md-8">
  <div class="d-flex flex-wrap">
    <% items.each do |item| %>
      <div class="w-25 p-1">
        <%= link_to item_path(item) do %>
          <%= image_tag item.get_image(160,120), class: "w-100" %>
          <p><%= item.name %></p>
          <p>ï¿¥<%= item.price_with_tax.to_s(:delimited) %></p>
          <% unless item.is_stopped == false %>
            <p class="card-text font-weight-bold text-danger">Sold Out</p>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>




