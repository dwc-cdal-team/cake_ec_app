<div class='container'>
  <div class='row'>
    <div class='col-3'>
      <%= render 'layouts/sidebar' %>
    </div>
    <div class='col-8 offset-1'>
      <div class='d-flex flex-row'>
        <div class="item_image mr-5">
          <%= image_tag 'no_image', size: "360x270" %>
        </div>
        <div class="item_text">
          <div class="item_name mb-3">
            <h3><%= @item.name %></h3>
          </div>
          <div class="item_introduction mb-3">
            <p><%= @item.introduction %></p>
          </div>
          <div class="item_price mb-3">
            <h4>￥<%= @item.price_with_tax.to_s(:delimited) %>(税込)</h4>
          </div>
<%
=begin
%>
          ※カート機能が出来てから

          <%= form_with model: モデル名 do |f| %>
            <div class="form-group">
          <%= f.select :amount, [["1", "1.to_i"], ["2", "2.to_i"], ["3", "3.to_i"], ["4", "4.to_i"],
          ["5", "5.to_i"], ["6", "6.to_i"], ["7", "7.to_i"], ["8", "8.to_i"], ["9", "9.to_i"],
          ["10", "10.to_i"]], include_blank: "個数選択", class: "form-select form-select-lg" %>
          <%= f.submit "カートに入れる", class: "btn btn-success ml-5" %>
          </div>
          <% end %>
  <%
=end
%>
        </div>
      </div>
    </div>
  </div>
</div>
