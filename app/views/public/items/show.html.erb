<div class='container'>
  <div class='row'>
    <div class='col-3'>
      <h2>ジャンル一覧</h2>
      <%#<%= render 'genreのリストテンプレート', 引数: 引数の指定 %>
    </div>
    <div class='col-8 offset-1'>
      <div class='d-flex flex-row mr-3'>
        <div class="item_image">
          <%= image_tag 'no_image.jpg' %>
        </div>
        <div class="item_text">
          <div class="item_name">
            <h3><%= @item.name %></h3>
          </div>
          <div class="item_introduction">
            <p><%= @item.introduction %></p>
          </div>
          <div class="item_price">
            <h4><%= @item.price_with_tax %>(税込)</h4>
          </div>
          <div class="amount_select">
            <%= form_with model: @cart do |f| %>
              <%= f.select :amount, [["1", "1.to_i"], ["2", "2.to_i"], ["3", "3.to_i"], ["4", "4.to_i"],
              ["5", "5.to_i"], ["6", "6.to_i"], ["7", "7.to_i"], ["8", "8.to_i"], ["9", "9.to_i"],
              ["10", "10.to_i"]], include_blank: "個数選択", class: "form-select form-select-lg mr-3" %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
