<div class='container'>
  <div class='row'>
    <div class='col-3'>
      <%= render 'layouts/sidebar' %>
    </div>
    <div class='col-8 offset-1'>
      <div class='d-flex flex-row'>
        <div class="item_image mr-5">
          <%= image_tag 'no_image', size: "360x270" %>
        </div>
        <div class="item_text">
          <div class="item_name mb-3">
            <h3><%= @item.name %></h3>
          </div>
          <div class="item_introduction mb-3">
            <p><%= @item.introduction %></p>
          </div>
          <div class="item_price mb-3">
            <h4>￥<%= @item.price_with_tax.to_s(:delimited) %>(税込)</h4>
          </div>
          <div class="form-group">
            <% if @item.is_stopped == false %>
              <%= form_with model: @cart do |f| %>
                <%= f.select :amount, *[1..10], include_blank: "個数選択", class: "form-select form-select-lg" %>
                <%= f.submit "カートに入れる", class: "btn btn-success ml-5" %>
              <% end %>
            <% else %>
              <p class="font-weight-bold text-danger">売り切れのためご購入いただけません</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
