<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>会員情報編集</h2>
      <%= render 'layouts/errors', obj: @customer %>
      <table class="table">
        </tr>
        <%= form_with model: @customer, url: customers_path(@customer.id), method: :patch do |f| %>
        <tr>
          <th>
            氏名
          </th>
          <th>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </th>
        </tr>
        <tr>
          <th>
            フリガナ
          </th>
          <th>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </th>
        </tr>
        <tr>
          <th>
            郵便番号
          </th>
          <th>
            <%= f.text_field :postal_code %>
          </th>
        </tr>
        <tr>
          <th>
            住所
          </th>
          <th>
            <%= f.text_field :address %>
          </th>
        </tr>
        <tr>
          <th>
            電話番号
          </th>
          <th>
            <%= f.text_field :telephone_number %>
          </th>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <th>
            <%= f.text_field :email %>
          </th>
        </tr>
        <tr>
          <th>
            会員ステータス
          </th>
          <th>
            <%= f.radio_button :is_deleted, :false %>有効
            <%= f.radio_button :is_deleted, :true %>退会
          </th>
        </tr>
        <tr>
          <th>

          </th>
          <th>
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </th>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>