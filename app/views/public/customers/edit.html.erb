<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>会員情報編集</h2>
      <%= render 'layouts/errors', obj: @customer %>
      <table class="table">
        <%= form_with model: @customer, url: customers_path, local: true, method: :patch do |f| %>
        <tr>
          <th>氏名</th>
          <th>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= f.text_field :telephone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field :email %></th>
        </tr>
        <tr>
          <th>
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </th>
          <th>
            <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
          </th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>