<div class="container py-5">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="row-md-10 pb-3">
        <h2>マイページ</h2>
      </div>

      <div class="row-md-10 pb-3">
        <h3>
          登録情報
          <%= link_to "編集する", edit_customers_path, class: "btn btn-success", method: :get %>
        </h3>
      </div>

      <div class="row-md-10 pb-3">
        <table class="table table-bordered">
          <tr>
            <td class="bg-light">氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td class="bg-light">カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>

      <div class="row-md-10 pb-3">
        <h3>
          配送先
          <%= link_to "一覧を見る", destinations_path, class: "btn btn-primary" %>
        </h3>
        <h3>
          注文履歴
          <%= link_to "一覧を見る", orders_path(current_customer), class: "btn btn-primary" %></th>
        </h3>
      </div>

    </div>
  </div>
</div>