

<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>マイページ</h3>
      <table class="table">
        <tr>
          <th>登録情報</th>
          <th><%= link_to "編集する", edit_customers_path, class: "btn btn-success", method: :get %></th>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <th><%= link_to "一覧を見る", destinations_path(current_customer), class: "btn btn-primary" %></th>
        </tr>
        <tr>
          <th>注文履歴</th>
          <th><%= link_to "一覧を見る", orders_path(current_customer), class: "btn btn-primary" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>